<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thefirstlineofcode.sand.server.lite.things.ThingIdentityMapper">
    <insert id="insert" parameterType="com.thefirstlineofcode.sand.server.lite.things.D_ThingIdentity">
        INSERT INTO THING_IDENTITIES(id, thing_id, thing_name, credentials) VALUES(#{id}, #{thingId}, #{thingName}, #{credentials})
    </insert>
        
	<resultMap id="thingIdentityResultMap" type="ThingIdentity">
	    <id property="id" column="id"/>
	    <result property="thingId" column="thing_id"/>
	    <result property="thingName" column="thing_name"/>
	    <result property="credentials" column="credentials"/>
	</resultMap>
    
	<select id="selectByThingName" resultType="com.thefirstlineofcode.sand.server.lite.things.D_ThingIdentity">
		SELECT * FROM THING_IDENTITIES WHERE thing_name = #{0}
    </select>
    
	<select id="selectThingIdByThingName" resultType="string">
		SELECT thing_id FROM THING_IDENTITIES WHERE thing_name = #{0}
    </select>
    
	<select id="selectByThingId" resultType="com.thefirstlineofcode.sand.server.lite.things.D_ThingIdentity">
		SELECT * FROM THING_IDENTITIES WHERE thing_id = #{0}
    </select>
    
	<select id="selectCountByThingName" resultType="int">
		SELECT count(*) FROM THING_IDENTITIES WHERE thing_name = #{0}
    </select>
</mapper>
