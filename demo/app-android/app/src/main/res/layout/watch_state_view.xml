<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/watch_state_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/watch_state"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_watch_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Address:" />

            <TextView
                android:id="@+id/watch_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_watch_battery_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Battery Level:" />

            <TextView
                android:id="@+id/watch_battery_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_watch_step_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Step Count:" />

            <TextView
                android:id="@+id/watch_step_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
